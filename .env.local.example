# AWS Amplify Configuration
NEXT_PUBLIC_AWS_REGION=us-east-1

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000

# ========================================
# FEATURE FLAGS - AppSync Migration
# ========================================
# Set to 'true' to use new AppSync architecture
# Set to 'false' or leave unset to use legacy Lambda URLs

# Stripe Operations (PHASE 1 - Golden Thread)
NEXT_PUBLIC_USE_APPSYNC_STRIPE_CONNECT=false

# Booking Operations (PHASE 2)
NEXT_PUBLIC_USE_APPSYNC_BOOKING=false

# Financial Operations (PHASE 3)
NEXT_PUBLIC_USE_APPSYNC_PAYOUT=false
NEXT_PUBLIC_USE_APPSYNC_REFUND=false

# Communication Operations (PHASE 4)
NEXT_PUBLIC_USE_APPSYNC_MESSAGING=false
NEXT_PUBLIC_USE_APPSYNC_NOTIFICATION=false

# Webhook Operations (PHASE 5)
NEXT_PUBLIC_USE_APPSYNC_STRIPE_WEBHOOK=false

# AI Operations (PHASE 6)
NEXT_PUBLIC_USE_APPSYNC_BEDROCK=false

# ========================================
# LEGACY LAMBDA URLs (TO BE REMOVED)
# ========================================
# These will be removed once migration is complete
# Only needed if feature flags are set to 'false'

STRIPE_CONNECT_LAMBDA_URL=https://your-stripe-connect-lambda.lambda-url.us-east-1.on.aws/
STRIPE_WEBHOOK_LAMBDA_URL=https://your-stripe-webhook-lambda.lambda-url.us-east-1.on.aws/
BOOKING_PROCESSOR_LAMBDA_URL=https://your-booking-processor-lambda.lambda-url.us-east-1.on.aws/
PAYOUT_MANAGER_LAMBDA_URL=https://your-payout-manager-lambda.lambda-url.us-east-1.on.aws/
REFUND_PROCESSOR_LAMBDA_URL=https://your-refund-processor-lambda.lambda-url.us-east-1.on.aws/
MESSAGING_HANDLER_LAMBDA_URL=https://your-messaging-handler-lambda.lambda-url.us-east-1.on.aws/
NOTIFICATION_HANDLER_LAMBDA_URL=https://your-notification-handler-lambda.lambda-url.us-east-1.on.aws/
BEDROCK_AI_LAMBDA_URL=https://your-bedrock-ai-lambda.lambda-url.us-east-1.on.aws/

# ========================================
# Testing & Development
# ========================================
LOG_LEVEL=debug
NODE_ENV=development

# Sentry (Optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=