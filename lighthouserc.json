{
  "ci": {
    "collect": {
      "url": [
        "/",
        "/search",
        "/services",
        "/bookings",
        "/profile"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }],
        "categories:seo": ["error", { "minScore": 0.9 }],
        "categories:pwa": "off",
        "first-contentful-paint": ["error", { "maxNumericValue": 2000 }],
        "speed-index": ["error", { "maxNumericValue": 3000 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "time-to-interactive": ["error", { "maxNumericValue": 3500 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "max-potential-fid": ["error", { "maxNumericValue": 130 }],
        "errors-in-console": ["error", { "maxLength": 0 }],
        "server-response-time": ["error", { "maxNumericValue": 600 }],
        "interactive": ["error", { "maxNumericValue": 3500 }],
        "mainthread-work-breakdown": ["error", { "maxNumericValue": 2000 }],
        "bootup-time": ["error", { "maxNumericValue": 2000 }],
        "uses-rel-preconnect": "warn",
        "uses-rel-preload": "warn",
        "font-display": "warn",
        "critical-request-chains": "warn",
        "redirects": ["error", { "maxNumericValue": 1 }],
        "image-aspect-ratio": "warn",
        "image-size-responsive": "warn",
        "uses-optimized-images": "warn",
        "uses-webp-images": "warn",
        "offscreen-images": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "githubAppToken": "$LHCI_GITHUB_APP_TOKEN",
      "githubStatusContextSuffix": "/performance"
    },
    "server": {
      "port": 9001,
      "storage": {
        "storageMethod": "sql",
        "sqlDatabasePath": "./lighthouse-ci.db"
      }
    }
  }
}